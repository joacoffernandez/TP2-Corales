enum Estado {
  PENDIENTE
  EN_COCINA
  ENVIADO
}

model PedidoCab {
    idPedidoCab String @id @default(cuid()) @map("idPedido")
    idUser String
    estado Estado @default(PENDIENTE)
    monto Float?
    descuento Int
    idDireccion String

    user User @relation(fields: [idUser], references: [idUser])
    //estado  EstadoPedido @relation(fields: [idEstado], references: [idEstadoPedido])
    direccion Direccion @relation(fields: [idDireccion], references: [idDireccion])
    pedidos_det PedidoDet[]

    @@map("pedidos_cab")
}